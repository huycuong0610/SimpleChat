<h1>New message</h1>
<%= form_for [@user, @message], :html => {:multipart => true} do |f| %>
  <% unless @message.errors.empty? %>
    <div class=" card-panel pink">
        <span class=" white-text"> <%= @message.errors.full_messages.to_sentence %></span>
    </div>
  <% end %>
 <div class="form-group">
  	<%= f.label :recipient_id, class: "form-control-label" %>
    <div class="input-field">
    	<%= f.select(:recipient_id, @users.all.collect{|u| [u.name, u.id]}, {prompt: "Select friend"}, {:multiple => true})%>
    </div>

    
  </div>
  <div class="form-group">
  	<%= f.label :title, class: "form-control-label" %>
  	<%= f.text_field :title, class: "form-control", placeholder: "Please input title" %>
  </div>
  <div class="form-group">
    <%= f.label :image, class: "form-control-label"%>
    <%= f.file_field :image, class: "file-path-wrapper"%>
  </div>
  <div class="action" style="margin-top:30px;">
  	<%= f.submit class: "waves-effect waves-light btn" %>
  </div>
<% end %>

<script>
 jQuery('input.autocomplete').autocomplete({
    data: {
      "Apple": null,
      "Microsoft": null,
      "Google": 'http://placehold.it/250x250'
    },
    limit: 20, // The max amount of results that can be shown at once. Default: Infinity.
    onAutocomplete: function(val) {
      // Callback function when value is autcompleted.
    },
    minLength: 1, // The minimum length of the input for the autocomplete to start. Default: 1.
  });

  $(document).ready(function() {
    $('select').material_select();
  });
</script>