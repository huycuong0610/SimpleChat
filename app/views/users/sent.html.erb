<h1>Sent Message</h1>
<div>
	<table class="table">
	<thead class="thead thead-default">
		<tr>
			<th>User</th>
			<th>Date</th>
			<th>Message</th>
			<th>Image</th>
			<th>Status</th>
		</tr>
	</thead>
	<tbody>
		<% @messages.each do |message| %>
		<tr>
			<td><%= User.find_by_id(message.recipient_id).name %></td>
			<td><%= time_ago_in_words message.created_at %></td>
			<td><%= message.title %></td>
			<td><%= image_tag message.image_url.to_s if message.image? %></td>
			<% if message.read? %>
				<td><%= message.read_at.strftime("%d %m %Y %I:%M%p") %></td>
			<% else %>
				<td>unread</td>
			<% end %>
		</tr>
		<% end %>
	</tbody>
</table>
</div>